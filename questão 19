#include <stdio.h> 
#include <stdlib.h>
#include <unistd.h>
#include <locale.h>
int mdc (int a, int b){
	while (b !=0) {
		int resto = a % b;
		a = b;
		b = resto;
	}
	return a;
}

int mmc(int a, int b){
	return (a*b) / mdc(a,b);	
}

int main() {
	setlocale(LC_ALL,"");
	system("color f9");
	int n1,n2,resultado;
	
	do{
		printf("Escreva o primeiro número: ");
		scanf("%d",&n1);
		
		if (n1 <= 0){
			system("cls");
			printf("Número invalido. Por favor digite  um número positivo. \n");
		}
	} while(n1 <= 0);
	
	
	
	do{
	
		printf("Escreva o sengundo número: ");
		scanf("%d",&n2);
        	
        if(n2 <= 0){
        	system("cls");
        	printf("Número invalido. Por favor digite um número positivo. \n");
		}

	} while(n2 <= 0);
	
	// resutado e calculo do mdc
	system("cls");
	resultado = mmc(n1,n2);
	
	printf("O MMC de %d e %d é %d\n	",n1,n2,resultado);
return 0;
}
